<div class="col-12">
  <h3 class="mb-5">ジャンル一覧・追加</h3>
  <div class="genre-form col-10 offset-1 mb-5">
    <%= render 'admin/shared/error_messages', resource: @genre %>
    <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
      <div class="row">
        <%= f.label :genre, "ジャンル名", class: 'mr-3' %>
        <%= f.text_field :genre, placeholder: "ジャンル名", class: 'form-control col-4 mr-5' %>
        <%= f.submit "新規登録", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>

  <div class="col-5 mb-5">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.genre %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre), class: 'btn btn-success' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


