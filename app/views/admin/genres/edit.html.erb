<div class="my-3 offset-1"><span class="page_title">ジャンル編集</span></div>
  <%= render 'admin/shared/error_messages', resource: @genre %>
  <div class="genre-form col-10 mb-5">
    <%= form_with model: @genre, url: admin_genre_path, local: true do |f| %>
    <div class="row">
      <%= f.label :genre, "ジャンル名", class: 'mr-5 mt-2' %>
      <%= f.text_field :genre, placeholder: "ジャンル名", class: 'form-control col-4 mr-5' %>
      <%= f.submit "変更を保存", class: 'btn btn-success px-4' %>
    </div>
    <% end %>
  </div>
</div>