<div class="col-12">
  <div class="col-10 offset-1 d-flex mt-5 pt-5">
    <div class="product-img mr-5">
      <%= attachment_image_tag @product, :product_image, size: "400x300", fallback: "no_image.jpg" %>
    </div>
    <div class="product-info mt-2">
      <h4><%= @product.name %></h4>
      <p class="mb-5 pb-5"><%= @product.description %></p>
      <p class="mb-5"><strong>¥ <%= include_tax(@product.price).to_s(:delimited) %></strong><span style="font-size: 13px;">（税込）</span></p>
      <%= form_with model: @cart_product, local: true do |f| %>
        <%= f.hidden_field :product_id, value:@product.id %>
        <%= f.select :quantity, (1..50).each{ |n| n }, include_blank: "個数選択" %>
        <%= f.submit "カートに入れる", class: 'btn btn-success ml-5' %>
      <% end %>
    </div>
  </div>
</div>