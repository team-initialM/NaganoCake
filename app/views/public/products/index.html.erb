<div class="col-12">
  <span class="my-5">商品一覧<span style="font-size: 18px;">（全<%= @products.count %>件）</span></span>
  <ul class="product-list d-flex flex-wrap justify-content-center">
    <% @products.each do |product| %>
      <li class="product-list-item mx-3 mt-5">
        <%= link_to product_path(product) do %>
          <%= attachment_image_tag product, :product_image, size: "200x200", fallback: "no_image.jpg" %>
          <p class="mt-3"><%= product.name %></p>
          <p>¥<%= include_tax(product.price).to_s(:delimited) %>（税込）</p>
        <% end %>
      </li>
    <% end %>
  </ul>
  <%= paginate @products %>
</div>
