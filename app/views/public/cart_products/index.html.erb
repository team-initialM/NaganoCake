<div class="bg-light">
  <p>ショッピングカート</p>
</div>
<% if @cart_products.present? %>
<%= link_to "カートを空にする", destroy_all_cart_products_path, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
<table class="table table-bordered">
  <thead class="head-light">
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_products.each do |cart_product| %>
    <tr>
      <td>
        <%= attachment_image_tag cart_product.product, :product_image, :fill, 60, 60 %>
        <%= cart_product.product.name %>
      </td>
      <td>
        <%= include_tax(cart_product.product.price) %>
      </td>
      <td>
        <%= form_with model:cart_product, url: cart_product_path(cart_product), local:true do |f| %>
          <%= f.hidden_field :product_id, value: cart_product.product_id %>
          <%= f.select :quantity, (1..50).each{ |n| n }, placeholder: "quantity" %>
          <%= f.submit "変更", class:"btn btn-success" %>
        <% end %>
      </td>
      <td>¥<%= (subtotal(cart_product)).to_s(:delimited) %></td>
      <td><%= link_to "削除する", cart_product_path(cart_product), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<table class="table table-bordered">
  <tbody>
    <td>
      合計金額
    </td>
    <td>
      
    </td>
  </tbody>
</table>
<%= link_to "情報入力に進む", new_order_path, class:"btn btn-success" %>
<% else %>
  <p>カート内に商品はありません。</p>
<% end %>
<%= link_to "買い物を続ける", root_path, class:"btn btn-info" %>