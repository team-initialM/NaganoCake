<span class = "page_title">ショッピングカート</span>

<div id="cart-products">
  <% if @cart_products.present? %>
    <div id="cart-products-content">
      <%= render 'cart-products-content', cart_products: @cart_products %>
    </div>
  <% else %>
    <p>カート内に商品はありません。</p>
  <% end %>
</div>

<div class = "col-12 d-flex justify-content-between p-0" id="cart-links">
  <%= render 'keep-cart-button' %>
<% if @cart_products.present? %>
  <table class="table table-bordered col-3">
    <thead class = "thead-light">
      <tr>
        <th style = "width:50%">
          合計金額
        </th>
        <td style = "width:50%" id="cart-total">
          <%= total(@cart_products).to_s(:delimited) %>
        </td>
      </tr>
    </thead>
  </table>
</div>

  <div class = "col-12 d-flex justify-content-center" id="cart-order-link">
    <%= link_to "情報入力に進む", new_order_path, class:"btn btn-success" %>
  </div>
<% end %>