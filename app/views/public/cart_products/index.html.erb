<div class="bg-light">
  <p>ショッピングカート</p>
</div>
<% if @cart_products.present? %>
<table class="table table-bordered">
  <thead class="head-light">
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_products.each do |cart_product| %>
    <tr>
      <td>
        商品画像が入ります
        <%= cart_products.product.name %>
      </td>
      <td>
        <%= cart_products.product.price %>
      </td>
      <td>
        <%= form_with model:cart_product, url: cart_products_path(cart_product), local:true do |f| %>
          <%= f.select :quantity, (1..50).each{ |n| n }, placeholder: "quantity" %>
          <%= f.submit "変更", class:"btn btn-success" %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "情報入力に進む", new_order_path, class:"btn btn-success" %>
<% else %>
  <p>カート内に商品はありません。</p>
<% end %>
<%= link_to "買い物を続ける", root_path, class:"btn btn-info" %>