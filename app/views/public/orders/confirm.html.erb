<div class="page_title offset-1 my-3 container">注文確認画面</div>
<div class="row justify-content-around">
  <table class="table table-bordered col-8">
    <thead class="thead-light">
      <tr>
        <th>商品名</th>
        <th></th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
      </tr>
    </thead>

    <tbody>
      <% @cart_products.each do |cart_product| %>
      <tr>
        <td><%= attachment_image_tag cart_product.product, :product_image, size: "50x50", fallback: "no_image.jpg" %></td>
        <td><%= cart_product.product.name %></td>
        <td><%= include_tax(cart_product.product.price).to_s(:delimited) %></td>
        <td><%= cart_product.quantity.to_s(:delimited) %></td>
        <td><%= subtotal(cart_product).to_s(:delimited) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <table class="table table-bordered col-4">
    <thead class="thead-light">
      <tr><th>送料</th><td><%= @order.postage.to_s(:delimited) %></td></tr>
      <tr><th>商品合計</th><td><%= @cart_total.to_s(:delimited) %></td></tr>
      <tr><th>請求金額</th><td><%= @order.total_price.to_s(:delimited) %></td></tr>
    </thead>
  </table>
</div>
<div class="container">
<div class="row">
  <div class="col-3">支払方法</div>
  <div class="col-7"><%= @order.payment_selection %></div>
</div>
<div class="row">
  <div class="col-3">お届け先</div>
  <div class="col-7">
    〒<%= @order.postcode %><%= @order.address %>
    <%= @order.address_name %>
  </div>
</div>
</div>
<%= form_with model: @order, local: true do |f| %>
  <%= f.hidden_field :customer_id, value: current_customer.id %>
  <%= f.hidden_field :total_price, value: @order.total_price %>
  <%= f.hidden_field :postcode %>
  <%= f.hidden_field :address %>
  <%= f.hidden_field :address_name %>
  <%= f.hidden_field :payment_selection %>
  <%= f.hidden_field :postage %>
  <%= f.submit "注文を確定する", class: 'btn btn-success' %>
<% end %>