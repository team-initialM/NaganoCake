<div class="offset-1 my-2"><span class="page_title">注文履歴詳細</span></div>
<div class="container">
  <div class="row">
    <table class="table table-bordered col-7">
      <caption class="text-dark font-weight-bold" style="caption-side: top">注文情報</caption>
      <thead class="thead-light">
        <tr><th class="align-middle">注文日</th><td><%= @order.created_at.strftime('%Y/%m/%d') %></td></tr>
        <tr>
          <th class="align-middle">配送先</th>
            <td>
              <%= @order.postcode %><br>
              <%= @order.address %><br>
              <%= @order.address_name %><br>
            </td>
        </tr>
        <tr><th class="align-middle">支払方法</th><td><%= @order.payment_selection %></td></tr>
        <tr><th class="align-middle">ステータス</th><td><%= @order.order_status %></td></tr>
      </thead>
    </table>
    <table class="table table-bordered col-4 mx-4">
    <caption class="text-dark font-weight-bold" style="caption-side: top">請求情報</caption>
      <thead class="thead-light">
        <tr><th>商品合計</th><td><%= @total_price.to_s(:delimited) %></td></tr>
        <tr><th>配送料</th><td><%= @order.postage.to_s(:delimited) %></td></tr>
        <tr><th class="h5 font-weight-bold">ご請求額</th><td><%= @order.total_price.to_s(:delimited) %></td></tr>
      </thead>
    </table>
  </div>
  <div class="row">
    <table class="table table-bordered col-8">
      <caption class="text-dark font-weight-bold" style="caption-side: top">請求情報</caption>
      <thead class="thead-light">
        <tr>
          <th>商品</th>
          <th>単価(税込)</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @order.order_products.each do |order_product| %>
        <tr>
          <td><%= order_product.product.name %></td>
          <td><%= order_product.product_price.to_s(:delimited) %></td>
          <td><%= order_product.quantity.to_s(:delimited) %></td>
          <td><%= order_subtotal(order_product).to_s(:delimited) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>