<div class="row">注文履歴一覧</div>
<table class="table">
  <thead>
    <tr>注文日</tr>
    <tr>配送先</tr>
    <tr>注文商品</tr>
    <tr>支払金額</tr>
    <tr>ステータス</tr>
    <tr>注文詳細</tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at %></td>
      <td>
        <%= order.postcode %>
        <%= order.address %>
        <%= order.address_name %>
      </td>
      <td><%= order.total_price %>円</td>
      <td>
        <% order.order_products.each do |order_product| %>
          <%= order_product.name %>
        <% end %>
      </td>
      <td><%= order.status %></td>
      <td><%= link_to "表示する", order_path(order) %></td>
    </tr>
    <% end %>
  </tbody>

</table>