<div class="my-4 offset-1"><span class="page_title">新規会員登録</span></div>

<%= form_with model: @customer, url: customers_path, id: 'new_user', class: 'new_user container', local: true do |f| %>
<%= render "customers/shared/error_messages", resource: resource %>

<div class="row my-3">
  <div class="col-2"><%= f.label "名前" %></div>
  <div class="col-1 text-right">(姓)</div>
  <%= f.text_field :firstname, autofocus: true, class: "form-control col-3", placeholder: "令和" %>
  <div class="col-1 text-right">(名)</div>
  <%= f.text_field :lastname, autofocus: true, class: "form-control col-3", placeholder: "道子" %>
</div>

<div class="row my-3">
  <%= f.label "フリガナ", class: "col-2" %>
  <div class="col-1 text-right">(セイ)</div>
  <%= f.text_field :kana_firstname, autofocus: true, class: "form-control col-3", placeholder: "レイワ" %>
  <div class="col-1 text-right">(メイ)</div>
  <%= f.text_field :kana_lastname, autofocus: true, class: "form-control col-3", placeholder: "ミチコ" %>
</div>

<div class="row my-3">
  <%= f.label :email, "メールアドレス",class: "col-3" %>
  <%= f.email_field :email, autofocus: true, class: "form-control col-3", placeholder: "sample@sample.com" %>
</div>

<div class="row my-3">
  <%= f.label :postcode,'郵便番号(ハイフンなし)', class: "col-3" %>
  <%= f.text_field :postcode, autofocus: true, class: "form-control col-3", id: "customer_postcode", placeholder: "0000000" %>
</div>

<div class="row my-3">
  <%= f.label :address,'住所', class: "col-3" %>
  <%= f.text_field :address, autofocus: true, class: "form-control col-7", id: "customer_address", placeholder: "東京都渋谷区代々木新園町0-0" %>
</div>

<div class="row my-3">
  <%= f.label :phone_number,'電話番号', class: "col-3" %>
  <%= f.text_field :phone_number, autofocus: true, class: "form-control col-3", placeholder: "00000000000" %>
</div>


<div class="row my-3">
  <div class="col-3">
    <%= f.label "パスワード" %>
      <% if @minimum_password_length %>
      (<%= @minimum_password_length %>文字以上)
    <% end %>
  </div>
  <%= f.password_field :password, autocomplete: "off", class: "form-control col-3" %>
</div>
<div class="row my-3">
  <%= f.label "パスワード(確認用)", class: "col-3" %>
  <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control col-3" %>
</div>
<div class="row my-3">
  <%= f.submit "新規登録" ,class: 'btn-lg btn-sm btn-success offset-3 col-3' %>
<% end %>
</div>
<div class="my-4 offset-1"><span class="page_title">既に登録済みの方</span></div>

<div class="container">
  <div class="row offset-1">
    <div class="col-1"><%= render "customers/shared/links" %></div><div class="col-4">からログインしてください</div>
  </div>
</div>
